@model Product
@{
    ViewData["Title"] = "Nuevo Producto";
}

<h2 class="text-center">Crear Producto</h2>

<form asp-action="Create" class="mt-4">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Descripción</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Precio</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Categoría</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end mt-3">

        <button type="submit" class="btn btn-success mr-2">
            <i class="bi bi-save"></i>
            Guardar
        </button>
        &nbsp
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
