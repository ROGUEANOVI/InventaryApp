@model IEnumerable<Product>
@{
    ViewData["Title"] = "Productos";
}

<h2 class="mb-5 text-center">Listado de Productos</h2>

<form asp-action="Index" method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="searchName" class="form-control" placeholder="Buscar por nombre" />
    </div>
    <div class="col-md-4">
        <input type="text" name="searchCategory" class="form-control" placeholder="Buscar por categoría" />
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-warning w-100"><i class="bi bi-funnel-fill"></i> Filtrar</button>
    </div>
    <div class="col-md-2">
        <a asp-action="Create" class="btn btn-success w-100"><i class="bi bi-plus-square"></i> Nuevo Producto</a>
    </div>
</form>

<table class="table-striped table-bordered table align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Categoría</th>
            <th>Precio</th>
            <th>Stock</th>
            <th class="text-center">Acciones</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>$@item.Price</td>
                <td>@item.Stock</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1">
                        <i class="bi bi-pencil-square"></i>
                        Editar
                    </a>
                    <a asp-action="Buy" asp-route-id="@item.Id" class="btn btn-success btn-sm me-1">
                        <i class="bi bi-bag"></i>
                        Comprar
                    </a>
                    <a asp-action="Sell" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-receipt"></i>
                        Vender
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm me-1">
                        <i class="bi bi-trash"></i>
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var toastEl = document.getElementById('toast-message');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();
            }
        });
    </script>
    }